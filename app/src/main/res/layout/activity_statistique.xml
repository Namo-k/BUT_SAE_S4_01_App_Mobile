<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".StatistiqueActivity">

    <!-- ========== ENTETE =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.23"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="456dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="-118dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="200dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ovale_shape" />

            <ImageView
                android:id="@+id/sedeconnecterBtn"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/deconnexion" />

            <ImageView
                android:id="@+id/logoIV"
                android:layout_width="170dp"
                android:layout_height="90.92dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="147dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/colombes_logo" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- ========== FIN ENTETE =========== -->

    <!-- ========== PAGE =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- ========== DEBUT SECTION STATISTIQUE =========== -->

            <TextView
                android:id="@+id/stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/patuaone_regular"
                android:text=" The statistics"
                android:textColor="@color/darkBlue"
                android:textSize="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ligne1"
                android:layout_width="180dp"
                android:layout_height="1.5dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="12dp"
                android:background="@color/lightBlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stats" />

            <ImageView
                android:id="@+id/stats_logo"
                android:layout_width="47dp"
                android:layout_height="48dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/stats_logo"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/blocStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/lightBlueLight"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ligne1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/lightBlueLight"
                    android:paddingHorizontal="11dp"
                    android:paddingTop="7dp"
                    >

                    <TextView
                        android:id="@+id/nbrSignalementLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Number of reports :"
                        android:textColor="@color/textGrey"
                        android:textSize="12.5dp" />

                    <TextView
                        android:id="@+id/nbrSignalementTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/nbrSignalementLabelTV"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/inter"
                        android:text=""
                        android:textColor="@color/textDarkBlue"
                        android:textSize="12.5dp" />

                    <TextView
                        android:id="@+id/medicamentLePlusSignaleLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nbrSignalementLabelTV"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Most reported medicine :"
                        android:textColor="@color/textGrey"
                        android:textSize="12.5dp" />

                    <TextView
                        android:id="@+id/medicamentLePlusSignaleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/medicamentLePlusSignaleLabelTV"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/inter"
                        android:text=""
                        android:textColor="@color/textDarkBlue"
                        android:textSize="12.5dp" />

                    <TextView
                        android:id="@+id/typeMedicamentLePlusSignaleLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/medicamentLePlusSignaleTV"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Most reported type of pathology :"
                        android:textColor="@color/textGrey"
                        android:textSize="12.5dp" />

                    <TextView
                        android:id="@+id/typeMedicamentLePlusSignaleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/typeMedicamentLePlusSignaleLabelTV"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/inter"
                        android:text=""
                        android:textColor="@color/textDarkBlue"
                        android:textSize="12.5dp" />

                    <TextView
                        android:id="@+id/nbrMedicamentImportantLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/typeMedicamentLePlusSignaleTV"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Number of significant alerts :"
                        android:textColor="@color/textGrey"
                        android:textSize="12.5dp"
                        />

                    <TextView
                        android:id="@+id/nbrMedicamentImportantTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/typeMedicamentLePlusSignaleTV"
                        android:layout_toRightOf="@+id/nbrMedicamentImportantLabelTV"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/textDarkBlue"
                        android:text=""
                        android:textSize="12.5dp"
                        android:lineHeight="17dp"
                        />


                    <TextView
                        android:id="@+id/nbrSaisiCIPLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nbrMedicamentImportantLabelTV"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Number of CIP entries :"
                        android:textColor="@color/textGrey"
                        android:textSize="12.5dp"
                        />

                    <TextView
                        android:id="@+id/nbrSaisiCIPTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nbrMedicamentImportantLabelTV"
                        android:layout_toRightOf="@+id/nbrSaisiCIPLabelTV"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/textDarkBlue"
                        android:text=""
                        android:textSize="12.5dp"
                        android:lineHeight="17dp"
                        />

                    <TextView
                        android:id="@+id/nbrSaisiDataMatrixLabelTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/nbrSaisiCIPTV"
                        android:layout_below="@+id/nbrMedicamentImportantLabelTV"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Scan DataMatrix :"
                        android:textColor="@color/textGrey"
                        android:textSize="12.5dp"
                        />

                    <TextView
                        android:id="@+id/nbrSaisiDataMatrixTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nbrMedicamentImportantLabelTV"
                        android:layout_toRightOf="@+id/nbrSaisiDataMatrixLabelTV"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/textDarkBlue"
                        android:text=""
                        android:textSize="12.5dp"
                        android:lineHeight="17dp"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- ========== FIN SECTION STATISTIQUE TEXTE =========== -->

            <androidx.cardview.widget.CardView
                android:id="@+id/spinBloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="@color/lightBlueLight"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/blocStats">

                <Spinner
                    android:id="@+id/spinnerGraphique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/blocGraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/lightBlueLight"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinBloc">

                <LinearLayout
                    android:id="@+id/graphBloc1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.github.mikephil.charting.charts.BarChart
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bar_chart"
                        android:layout_marginBottom="8dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/graphBloc2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.github.mikephil.charting.charts.PieChart
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pie_chart"
                        android:layout_marginBottom="8dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/graphBloc3"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.github.mikephil.charting.charts.PieChart
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/pie_chart2"
                        android:layout_marginBottom="8dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- ========== FIN PAGE =========== -->

    <!-- ========== NAVBAR =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="bottom"
        android:background="@color/darkBlueLight"
        android:gravity="center">

        <ImageView
            android:id="@+id/toutAlerteBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="113dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/anciennes" />

        <ImageView
            android:id="@+id/homeAdminBtn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/home" />


        <androidx.cardview.widget.CardView
            android:layout_width="79dp"
            android:layout_height="55dp"
            android:layout_marginEnd="92dp"
            app:cardBackgroundColor="@color/hover"
            app:cardCornerRadius="17dp">

            <ImageView
                android:id="@+id/statsBtn"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/stats" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!-- ========== FIN NAVBAR =========== -->


</LinearLayout>
