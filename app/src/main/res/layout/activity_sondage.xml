<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- ========== ENTETE =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.23"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="456dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="-118dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="200dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ovale_shape" />

            <ImageView
                android:id="@+id/sedeconnecterBtn"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/deconnexion" />

            <ImageView
                android:id="@+id/logoIV"
                android:layout_width="170dp"
                android:layout_height="90.92dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="147dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/colombes_logo" />

            <ImageView
                android:id="@+id/notifBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="355dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/cloche" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="385dp"
                android:layout_marginTop="23dp"
                android:alpha="0.8"
                app:cardBackgroundColor="@color/darkBlueLightLight"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/nbNotifTV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- ========== FIN ENTETE =========== -->

    <!-- ========== PAGE =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <!-- ========== DEBUT SECTION INFORMATIONS =========== -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/patuaone_regular"
                    android:gravity="center"
                    android:text="Votre avis compte !"
                    android:textColor="@color/darkBlue"
                    android:textSize="21dp" />

                <View
                    android:layout_width="202dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="9dp"
                    android:background="@color/lightBlue" />

            </LinearLayout>

            <ImageView
                android:layout_width="49dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginStart="85dp"
                android:src="@drawable/alertes_icone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/blocInformations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/lightBlueLight"
                app:cardCornerRadius="20dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"
                    android:layout_marginHorizontal="10dp">

                    <TextView
                        android:id="@+id/titre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center"
                        android:text="Remplissez ces informations :"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/darkBlue"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/remerciement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titre"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_light"
                        android:gravity="center"
                        android:text="Merci infiniment pour votre contribution !"
                        android:textColor="@color/textGrey"
                        android:textSize="13.7dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/remerciement"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Note de l'application* :"
                        android:textColor="@color/textGrey"
                        android:textSize="14dp"
                        tools:ignore="TextSizeCheck" />

                    <Spinner
                        android:id="@+id/spinnerNote"
                        android:layout_width="200dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/remerciement"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/note"
                        android:background="@drawable/spinner"
                        android:fontFamily="@font/inter"
                        android:paddingLeft="4dp"
                        android:textColor="@color/textDarkBlue"
                        android:textSize="13dp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageView
                        android:id="@+id/etoile1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:visibility="gone"
                        android:layout_gravity="end"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/note"
                        android:src="@drawable/etoile" />

                    <ImageView
                        android:id="@+id/etoile2"
                        android:layout_width="35dp"
                        android:visibility="gone"
                        android:layout_height="35dp"
                        android:layout_gravity="end"
                        android:layout_toEndOf="@id/etoile1"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/note"
                        android:src="@drawable/etoile" />

                    <ImageView
                        android:id="@+id/etoile3"
                        android:visibility="gone"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="end"
                        android:layout_toEndOf="@id/etoile2"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/note"
                        android:src="@drawable/etoile" />

                    <ImageView
                        android:id="@+id/etoile4"
                        android:visibility="gone"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@id/etoile3"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/note"
                        android:src="@drawable/etoile" />

                    <ImageView
                        android:id="@+id/etoile5"
                        android:visibility="gone"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="end"
                        android:layout_toEndOf="@id/etoile4"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/note"
                        android:src="@drawable/etoile" />

                    <TextView
                        android:id="@+id/methodePref"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/note"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="75dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Méthode préférée* :"
                        android:textColor="@color/textGrey"
                        android:textSize="14dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/methodePref"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Conseils d'améliorations  :"
                        android:textColor="@color/textGrey"
                        android:textSize="14dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/inputMedoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etoile1"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter"
                        android:textColor="@color/textDarkBlue"
                        android:textSize="13.5dp" />


                    <EditText
                        android:id="@+id/inputMessage"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_below="@+id/message"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/round_createalert"
                        android:fontFamily="@font/inter"
                        android:hint="Pour plus de détails, écrivez ici..."
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/textDarkBlue"
                        android:textSize="13dp" />


                    <Spinner
                        android:id="@+id/spinnerMethode"
                        android:layout_width="270dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/note"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="74.5dp"
                        android:layout_toEndOf="@id/methodePref"
                        android:background="@drawable/spinner"
                        android:fontFamily="@font/inter"
                        android:paddingLeft="6dp"
                        android:textColor="@color/textDarkBlue"
                        android:textSize="13dp"
                        tools:ignore="TouchTargetSizeCheck" />


                    <LinearLayout
                        android:id="@+id/btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/inputMessage">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnAnnuler"
                            android:layout_width="120dp"
                            android:layout_height="34dp"
                            android:layout_below="@id/inputMessage"
                            app:cardBackgroundColor="@color/darkBlueLight"
                            app:cardCornerRadius="6dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:text="Annuler"
                                android:textColor="@color/whitenuit"
                                android:textSize="15dp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnEnregistrer"
                            android:layout_width="170dp"
                            android:layout_height="34dp"
                            android:layout_below="@id/inputMessage"
                            android:layout_marginLeft="14dp"
                            android:layout_toRightOf="@+id/btnAnnuler"
                            app:cardBackgroundColor="@color/darkBlueLight"
                            app:cardCornerRadius="6dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center"
                                android:text="Enregistrer"
                                android:textColor="@color/whitenuit"
                                android:textSize="15dp" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/btn">
                        <TextView
                            android:id="@+id/info1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btnAnnuler"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="* Ces informations sont"
                            android:textColor="@color/textGrey"
                            android:layout_marginBottom="5dp"
                            android:textSize="13.5dp" />

                        <TextView
                            android:id="@+id/info2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/inter_bold"
                            android:text=" obligatoires"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/red"
                            android:textSize="13.5dp" />

                    </LinearLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- ========== FIN SECTION INFORMATIONS =========== -->

    </LinearLayout>

    <!-- ========== FIN PAGE =========== -->


    <!-- ========== NAVBAR =========== -->
    <!-- ========== FIN NAVBAR =========== -->

</LinearLayout>
