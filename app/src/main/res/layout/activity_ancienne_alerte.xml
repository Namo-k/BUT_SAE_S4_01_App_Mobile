<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ancienneAlerteActivity">

    <!-- ========== ENTETE =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="456dp"
            android:layout_height="240dp"
            app:cardCornerRadius="200dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="-100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ovale_shape"
            />

            <ImageView
                android:id="@+id/sedeconnecterBtn"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="62dp"
                android:src="@drawable/sedeconnecter1"
            />

            <ImageView
                android:id="@+id/logoIV"
                android:layout_width="170dp"
                android:layout_height="90.92dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="146dp"
                android:src="@drawable/colombes_logo"
            />

            <ImageView
                android:id="@+id/notifBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="355dp"
                android:src="@drawable/cloche"
            />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="385dp"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                app:cardBackgroundColor="@color/darkBlueLightLight"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/nbNotifTV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- ========== FIN ENTETE =========== -->

    <!-- ========== PAGE =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Mes anciennes alertes"
                    android:textSize="21dp"
                    android:textColor="@color/darkBlue"
                    android:textStyle="bold"

                />

                <View
                    android:layout_width="250dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/darkBlueLightLight"
                />

            </LinearLayout>

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/alertes"
                android:layout_marginStart="60dp"
                android:layout_gravity="end"
            />

        </LinearLayout>


        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Container page"
            android:background="@color/lightBlue"
        />-->

        <ListView
            android:id="@+id/ancienneAlertelistView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:dividerHeight="20dp"
        />

    </LinearLayout>

    <!-- ========== FIN PAGE =========== -->

    <!-- ========== NAVBAR =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_gravity="bottom"
        android:background="@color/darkBlueLight"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="79dp"
            android:layout_height="53dp"
            app:cardBackgroundColor="@color/hover"
            android:layout_marginEnd="40dp"
            app:cardCornerRadius="17dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ancienneBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/anciennes"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
            />

        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/home"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
        />

        <ImageView
            android:id="@+id/userBtn"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/user"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
        />

    </LinearLayout>

    <!-- ========== FIN NAVBAR =========== -->

</LinearLayout>