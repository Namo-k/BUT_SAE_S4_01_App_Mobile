<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ancienneAlerteActivity">


    <!-- ========== ENTETE =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.23"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="456dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="-118dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="200dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ovale_shape" />

            <ImageView
                android:id="@+id/sedeconnecterBtn"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/deconnexion" />

            <ImageView
                android:id="@+id/logoIV"
                android:layout_width="170dp"
                android:layout_height="90.92dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="144dp"
                android:layout_marginTop="55dp"
                android:src="@drawable/colombes_logo" />

            <ImageView
                android:id="@+id/notifBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="355dp"
                android:layout_marginTop="38dp"
                android:src="@drawable/cloche" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="385dp"
                android:layout_marginTop="23dp"
                android:alpha="0.8"
                app:cardBackgroundColor="@color/darkBlueLightLight"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/nbNotifTV"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- ========== FIN ENTETE =========== -->

    <!-- ========== PAGE =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Mes anciennes alertes"
                    android:textSize="21dp"
                    android:fontFamily="@font/patuaone_regular"
                    android:textColor="@color/darkBlue"
                    android:layout_marginLeft="8dp"
                />

                <View
                    android:layout_width="232dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/lightBlue"
                />

            </LinearLayout>

            <ImageView
                android:layout_width="49dp"
                android:layout_height="50dp"
                android:src="@drawable/alertes"
                android:layout_marginStart="56dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="end"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="70dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/nbAlertes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="16dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/darkBlue"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Merci infiniment pour votre contribution !"
                android:textSize="15dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/textGrey"
                />

        </LinearLayout>

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Container page"
            android:background="@color/lightBlue"
        />-->

        <ListView
            android:id="@+id/ancienneAlertelistView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:divider="#FFFFFF"
            android:dividerHeight="17dp"
        />

    </LinearLayout>

    <!-- ========== FIN PAGE =========== -->

    <!-- ========== NAVBAR =========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="bottom"
        android:background="@color/darkBlueLight"
        android:gravity="center">


        <androidx.cardview.widget.CardView
            android:layout_width="82dp"
            android:layout_height="55dp"
            app:cardBackgroundColor="@color/hover"
            android:layout_marginEnd="30dp"
            app:cardCornerRadius="17dp"
            >

        <ImageView
            android:id="@+id/ancienneBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/anciennes"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp" />

        </androidx.cardview.widget.CardView>

        <ImageView
                android:id="@+id/homeBtn"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/home"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                />

        <ImageView
            android:id="@+id/userBtn"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/user"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />

    </LinearLayout>

</LinearLayout>
